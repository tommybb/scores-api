<h2><%= t('additional.change_your_password')%></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: t('additional.new_password'), required: true, autofocus: true %>
    <%= f.input :password_confirmation, label: t('additional.password_confirmation'), required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('additional.change_my_password') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
