<h2><%= t('Zaloguj')%></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, label: t('additional.email') %>
    <%= f.input :password, required: false, label: t('additional.password') %>
    <%= f.input :remember_me, as: :boolean, label: t('additional.remember_me') if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('additional.login') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
