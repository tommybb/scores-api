<h2><%= t('additional.edit')%> <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, label: t('user.name') %>
    <%= f.input :last_name, required: true, label: t('user.last_name') %>
    <%= f.input :email, required: true, autofocus: true, label: t('user.email') %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: t('additional.leave_blank'), required: false, label: t('additional.password') %>
    <%= f.input :password_confirmation, required: false, label: t('additional.password_confirmation') %>
    <%= f.input :current_password, hint: t('additional.current_password_hint'), required: true, label: t('additional.current_password') %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('additional.update') %>
  </div>
<% end %>

<h3><%= t('additional.cancel')%></h3>

<p><%= t('additional.unhappy')%> <%= link_to t('additional.cancel'), registration_path(resource_name), data: { confirm: t('additional.confirm') }, method: :delete %></p>

<%= link_to t('additional.back'), :back %>
