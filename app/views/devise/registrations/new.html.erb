<h2><%= t('additional.sign_up') %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, label: t('user.name') %>
    <%= f.input :last_name, required: true, label: t('user.last_name') %>
    <%= f.input :email, required: true, autofocus: true, label: t('user.email') %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} #{t('additional.characters_minimum')}" if @validatable), label: t('additional.password') %>
    <%= f.input :password_confirmation, required: true, label: t('additional.password_confirmation') %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('additional.sign_up') %>
  </div>
<% end %>
