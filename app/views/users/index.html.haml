.panel.panel-primary
  .panel-heading= t('user.listing_users')
  %table.table.table-striped
    %tr
      %th= t('user.name')
      %th= t('user.last_name')
      %th= t('user.birth_date')
      %th= t('user.school_class')
      %th= t('user.email')
      %th= t('user.admin')
      %th

    - users.each do |user|
      %tr
        %td.col-md-2= user.name
        %td.col-md-2= user.last_name
        %td.col-md-2= user.birth_date
        %td.col-md-1= user.school_class
        %td.col-md-2= user.email
        %td.col-md-1= user.admin
        %td.col-md-2
          = link_to t('record.show'), user, class: 'btn btn-xs btn-default'
          = link_to t('record.edit'), edit_user_path(user), class: 'btn btn-xs btn-default'
          = link_to t('record.destroy'), user, :method => :delete, :data => { confirm: t('record.confirmation') }, class: 'btn btn-xs btn-danger'

%br

= link_to t('user.new_user'), new_user_path, class: 'btn btn-sm btn-primary'
