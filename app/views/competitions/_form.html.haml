= simple_form_for competition do |f|
  - if competition.errors.any?
    #error_explanation
      %h2= "#{pluralize(competition.errors.count, "error")} prohibited this competition from being saved:"
      %ul
        - competition.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.input :name, label: t('competition.name')
    %br
  .actions
    = f.button :submit, t('record.create'), class: 'btn btn-sm btn-primary'
    = link_to t('record.back'), competitions_path, class: 'btn btn-sm btn-danger'
