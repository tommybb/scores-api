.panel.panel-primary
  .panel-heading= t('competition.listing_competitions')
  %table.table.table-striped
    %tr
      %th= t('competition.name')
      %th

    - competitions.each do |competition|
      %tr
        %td.col-md-10= competition.name
        %td.col-md-2
          = link_to t('record.show'), competition, class: 'btn btn-xs btn-default'
          = link_to t('record.edit'), edit_competition_path(competition), class: 'btn btn-xs btn-default'
          = link_to t('record.destroy'), competition, :method => :delete, :data => { confirm: t('record.confirmation') }, class: 'btn btn-xs btn-danger'

%br

= link_to t('competition.new_competition'), new_competition_path, class: 'btn btn-sm btn-primary'
